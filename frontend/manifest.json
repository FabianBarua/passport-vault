{
    "manifest_version": 3,
    "name": "vite-ts-react-test",
    "version": "1.0",
    "description": "",
    "action": {
      "default_popup": "index.html"
    },
    "background": {
      "service_worker": "./public/background.js"
    },
    "permissions": [
      "scripting",
      "tabs",
      "activeTab",
      "storage"
    ],
    "host_permissions": [
      "https://*/*",
      "http://*/*"
    ],
    "icons": {
      "16": "icon.jpg",
      "32": "icon.jpg"
    },
    "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
  }
